{
  "compilerOptions": {
    "target": "es6",        // Set ECMAScript target version
    "module": "commonjs",   // Set module code generation
    "outDir": "./dist",     // Redirect output structure
    "rootDir": "./src",     // Specify the root directory
    "strict": true,         // Enable all strict type-checking options
    "esModuleInterop": true // Enables interoperability between CommonJS and ES Modules
  },
  "include": ["src/**/*"], // Include all files in the src folder
  "exclude": ["node_modules"]
}
